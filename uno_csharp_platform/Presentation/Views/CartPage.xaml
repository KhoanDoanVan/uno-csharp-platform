                    <TextBlock Grid.Column="1" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="{ThemeResource SystemAccentColor}">
                        <Run Text="{x:Bind ViewModel.TotalPrice, Mode=OneWay}"/>
                        <Run Text="â‚«"/>
                    </TextBlock>
                </Grid>

                <Button Grid.Row="1" 
                       Content="Thanh toÃ¡n" 
                       Command="{x:Bind ViewModel.ProceedToCheckoutCommand}" 
                       HorizontalAlignment="Stretch" 
                       Padding="0,15" 
                       FontSize="18" 
                       FontWeight="SemiBold" 
                       Style="{StaticResource AccentButtonStyle}"/>
            </Grid>
        </Border>
    </Grid>
</Page>