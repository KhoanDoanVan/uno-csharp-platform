                    <TextBlock Text="HÃ£y thÃªm sáº£n pháº©m vÃ o giá» hÃ ng" 
                              Opacity="0.6" 
                              HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Cart Items List -->
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.CartItems, Mode=OneWay}">
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="models:CartItem">
                            <Border Background="{ThemeResource SystemControlBackgroundAltHighBrush}" 
                                   CornerRadius="8" 
                                   Padding="15" 
                                   Margin="0,0,0,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" 
                                           CornerRadius="8" 
                                           Width="80" 
                                           Height="80">
                                        <Image Source="{x:Bind ImageUrl}" 
                                              Stretch="UniformToFill"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" 
                                               Margin="15,0,0,0" 
                                               VerticalAlignment="Center">
                                        <TextBlock Text="{x:Bind ProductName}" 
                                                  FontWeight="SemiBold" 
                                                  TextWrapping="Wrap" 
                                                  Margin="0,0,0,5"/>

                                        <TextBlock FontSize="16" 
                                                  FontWeight="Bold" 
                                                  Foreground="{ThemeResource SystemAccentColor}">
                                            <Run Text="{x:Bind Price}"/>
                                            <Run Text="â‚«"/>
                                        </TextBlock>

                                        <StackPanel Orientation="Horizontal" 
                                                   Spacing="10" 
                                                   Margin="0,10,0,0">
                                            <Button Content="âˆ’" 
                                                   Command="{Binding DataContext.DecreaseQuantityCommand, ElementName=PageRoot}" 
                                                   CommandParameter="{x:Bind}" 
                                                   Width="35" 
                                                   Height="35" 
                                                   FontSize="18" 
                                                   Padding="0"/>
                                            <TextBlock Text="{x:Bind Quantity, Mode=OneWay}" 
                                                      FontSize="18" 
                                                      VerticalAlignment="Center" 
                                                      MinWidth="30" 
                                                      TextAlignment="Center"/>
                                            <Button Content="+" 
                                                   Command="{Binding DataContext.IncreaseQuantityCommand, ElementName=PageRoot}" 
                                                   CommandParameter="{x:Bind}" 
                                                   Width="35" 
                                                   Height="35" 
                                                   FontSize="18" 
                                                   Padding="0"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" 
                                               VerticalAlignment="Center" 
                                               HorizontalAlignment="Right">
                                        <TextBlock FontSize="18" 
                                                  FontWeight="Bold" 
                                                  TextAlignment="Right" 
                                                  Margin="0,0,0,10">
                                            <Run Text="{x:Bind Subtotal, Mode=OneWay}"/>
                                            <Run Text="â‚«"/>
                                        </TextBlock>

                                        <Button Content="ðŸ—‘ï¸" 
