                   Background="Transparent" 
                   BorderThickness="0" 
                   Foreground="White" 
                   FontSize="14"
                   Visibility="{x:Bind ViewModel.IsEmpty, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
        </Grid>

        <!-- Cart Items -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Padding="15">
                <!-- Empty State -->
                <StackPanel Visibility="{x:Bind ViewModel.IsEmpty, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center" 
                           Margin="0,100,0,0">
                    <TextBlock Text="ðŸ›’" 
                              FontSize="72" 
