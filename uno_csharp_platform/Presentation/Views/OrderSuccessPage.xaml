<Page x:Class="uno_csharp_platform.Presentation.Views.OrderSuccessPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Padding="40">
            
            <TextBlock Text="✅" 
                      FontSize="96" 
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,30"/>

            <TextBlock Text="Đặt hàng thành công!" 
                      FontSize="32" 
                      FontWeight="Bold" 
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,15"/>

            <TextBlock Text="Cảm ơn bạn đã mua hàng" 
                      FontSize="18" 
                      Opacity="0.7" 
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,10"/>

            <TextBlock Text="Chúng tôi sẽ liên hệ với bạn sớm nhất" 
                      FontSize="18" 
                      Opacity="0.7" 
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,40"/>

            <Button Content="Về trang chủ" 
                   Command="{x:Bind ViewModel.NavigateToHomeCommand}" 
                   HorizontalAlignment="Center" 
                   Padding="40,15" 
                   FontSize="18" 
                   Style="{StaticResource AccentButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>