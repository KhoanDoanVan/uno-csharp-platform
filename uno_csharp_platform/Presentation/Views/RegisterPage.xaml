<Page x:Class="uno_csharp_platform.Presentation.Views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       MaxWidth="400" 
                       Padding="20">
                
                <TextBlock Text="Đăng Ký" 
                          FontSize="32" 
                          FontWeight="SemiBold" 
                          HorizontalAlignment="Center" 
                          Margin="0,0,0,30"/>

                <TextBox Header="Tên đăng nhập" 
                        Text="{x:Bind ViewModel.Username, Mode=TwoWay}" 
                        Margin="0,0,0,15" 
                        PlaceholderText="Nhập tên đăng nhập"/>

                <TextBox Header="Email" 
                        Text="{x:Bind ViewModel.Email, Mode=TwoWay}" 
                        Margin="0,0,0,15" 
                        PlaceholderText="Nhập email"/>

                <PasswordBox Header="Mật khẩu" 
                            Password="{x:Bind ViewModel.Password, Mode=TwoWay}" 
                            Margin="0,0,0,15" 
                            PlaceholderText="Nhập mật khẩu (tối thiểu 6 ký tự)"/>

                <PasswordBox Header="Xác nhận mật khẩu" 
                            Password="{x:Bind ViewModel.ConfirmPassword, Mode=TwoWay}" 
                            Margin="0,0,0,20" 
                            PlaceholderText="Nhập lại mật khẩu"/>

                <TextBlock Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}" 
                          Foreground="Red" 
                          TextWrapping="Wrap" 
                          Margin="0,0,0,15"/>

                <Button Content="Đăng Ký" 
                       Command="{x:Bind ViewModel.RegisterCommand}" 
                       HorizontalAlignment="Stretch" 
                       Margin="0,0,0,15" 
                       Style="{StaticResource AccentButtonStyle}"/>

                <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" 
                             HorizontalAlignment="Center" 
                             Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center">
                    <TextBlock Text="Đã có tài khoản? " 
                              VerticalAlignment="Center"/>
                    <HyperlinkButton Content="Đăng nhập" 
                                    Command="{x:Bind ViewModel.NavigateToLoginCommand}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>