<Page x:Class="uno_csharp_platform.Presentation.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:models="using:uno_csharp_platform.Models"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" 
              Background="{ThemeResource SystemAccentColor}" 
              Padding="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Cá»­a HÃ ng" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="White" 
                      VerticalAlignment="Center"/>

            <Button Grid.Column="1" 
                   Command="{x:Bind ViewModel.NavigateToCartCommand}" 
                   Background="Transparent" 
                   BorderThickness="0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Cart" 
                              FontSize="24" 
                              VerticalAlignment="Center"/>
                    <Border Background="Red" 
                           CornerRadius="10" 
                           Padding="5,2" 
                           Margin="5,0,0,0"
                           Visibility="{x:Bind ViewModel.CartItemCount, Mode=OneWay, Converter={StaticResource ZeroToCollapsedConverter}}">
                        <TextBlock Text="{x:Bind ViewModel.CartItemCount, Mode=OneWay}" 
                                  Foreground="White" 
                                  FontSize="12" 
                                  FontWeight="Bold"/>
                    </Border>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Product List -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Padding="15">
                <TextBox PlaceholderText="TÃ¬m kiáº¿m sáº£n pháº©m..." 
                        Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay}" 
                        Margin="0,0,0,15"/>

                <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" 
                             HorizontalAlignment="Center" 
                             Margin="0,50,0,0"/>

                <GridView ItemsSource="{x:Bind ViewModel.Products, Mode=OneWay}" 
                         SelectionMode="None"
                         IsItemClickEnabled="True">
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="models:Product">
                            <Border Background="{ThemeResource SystemControlBackgroundAltHighBrush}" 
                                   CornerRadius="8" 
                                   Padding="10" 
                                   Width="180" 
                                   Margin="5">
                                <StackPanel>
                                    <Border CornerRadius="8" 
                                           Height="150" 
                                           Margin="0,0,0,10">
                                        <Image Source="{x:Bind ImageUrl}" 
                                              Stretch="UniformToFill"/>
                                    </Border>

                                    <TextBlock Text="{x:Bind Name}" 
                                              FontWeight="SemiBold" 
                                              TextWrapping="Wrap" 
                                              MaxHeight="40" 
                                              Margin="0,0,0,5"/>

                                    <TextBlock FontSize="18" 
                                              FontWeight="Bold" 
                                              Foreground="{ThemeResource SystemAccentColor}" 
                                              Margin="0,0,0,10">
                                        <Run Text="{x:Bind Price}"/>
                                        <Run Text="â‚«"/>
                                    </TextBlock>

                                    <StackPanel Orientation="Horizontal" 
                                               Spacing="5">
                                        <Button Content="Xem" 
                                               Command="{Binding DataContext.ViewProductDetailsCommand, ElementName=PageRoot}" 
                                               CommandParameter="{x:Bind}" 
                                               HorizontalAlignment="Stretch" 
                                               Width="80"/>
                                        <Button Content="ðŸ›’" 
                                               Command="{Binding DataContext.AddToCartCommand, ElementName=PageRoot}" 
                                               CommandParameter="{x:Bind}" 
                                               Style="{StaticResource AccentButtonStyle}" 
                                               Width="80"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Floating Bar -->
        <Border Grid.Row="2" 
               Background="{ThemeResource SystemControlBackgroundAltHighBrush}" 
               BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" 
               BorderThickness="0,1,0,0" 
               Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                       HorizontalAlignment="Stretch" 
                       BorderThickness="0">
                    <StackPanel>
                        <TextBlock Text="" 
                                  FontSize="24" 
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="Trang chá»§" 
                                  FontSize="12" 
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="1" 
                       Command="{x:Bind ViewModel.NavigateToCartCommand}" 
                       HorizontalAlignment="Stretch" 
                       BorderThickness="0">
                    <StackPanel>
                        <Grid>
                            <TextBlock Text="" 
                                      FontSize="24" 
                                      HorizontalAlignment="Center"/>
                            <Border Background="Red" 
                                   CornerRadius="10" 
                                   Padding="4,2" 
                                   HorizontalAlignment="Right" 
                                   VerticalAlignment="Top" 
                                   Margin="0,-5,-5,0"
                                   Visibility="{x:Bind ViewModel.CartItemCount, Mode=OneWay, Converter={StaticResource ZeroToCollapsedConverter}}">
                                <TextBlock Text="{x:Bind ViewModel.CartItemCount, Mode=OneWay}" 
                                          Foreground="White" 
                                          FontSize="10" 
                                          FontWeight="Bold"/>
                            </Border>
                        </Grid>
                        <TextBlock Text="Giá» hÃ ng" 
                                  FontSize="12" 
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="2" 
                       Command="{x:Bind ViewModel.NavigateToProfileCommand}" 
                       HorizontalAlignment="Stretch" 
                       BorderThickness="0">
                    <StackPanel>
                        <TextBlock Text="" 
                                  FontSize="24" 
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="TÃ i khoáº£n" 
                                  FontSize="12" 
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>